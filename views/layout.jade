doctype 5
html
  head
    title= title
    if app.version
        link(rel='stylesheet', href='//:wideor-static.s3.amazonaws.com/#{app.version}_style.css')
    else
        link(rel='stylesheet', href='/stylesheets/style.css')

  body
    #wrap
        #header.navbar
            .navbar-inner
                .container
                    button.btn.btn-navbar(type="button", data-target=".nav-collapse", data-toggle="collapse")
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.brand(href="/") Wideor.it
                    .nav-collapse.collapse
                        ul.nav
                            li
                                a.bblink(href="/videos/add") Add Video
                            li
                                a(href="/about") About
        #content.container
            block content
        #push
    #footer
        .container
            p.muted.credit
